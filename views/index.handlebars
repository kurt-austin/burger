<div class="jumbotron jumbotron-fluid">
  <div class="container d-flex justify-content-center">
    <h1 class="display-4">Eat Da Burger</h1>
  </div>
</div>

<div class = "row d-flex justify-content-center">   
    <img src="/assets/img/burger.png">
</div>

<div class="container-fluid">
    <div class="row">
    
      <div class="col d-flex justify-content-around"> 
            <ul class="devoured">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devoured=true}}
                {{/unless}}
              {{/each}}
            </ul>
      </div>

                    {{!-- <h2>Burgers devoured!</h2> --}}
      
      <div class="col d-flex justify-content-around">
            <ul class="newburger">
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devoured=false}}
                {{/if}}
              {{/each}}
            </ul>
      </div>

    </div>
</div>
<div class="container-fluid">
    <div class="row d-flex justify-content-around">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <input type = "radio" name="devoured" value="0"> Please Enter a Burger You want to try.
           <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
      </form> 
    </div>
</div>

