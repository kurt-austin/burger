<div class="jumbotron jumbotron-fluid">
  <div class="container d-flex justify-content-center">
    <h1 class="display-4">Eat Da Burger</h1>
  </div>
</div>

<div class="row d-flex justify-content-center">
  <img src="/assets/img/burger.png">
</div>

<div class="container-fluid">
  <div class="row">

    <div class="col d-flex justify-content-around">
      <ul class="devoured">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col d-flex justify-content-around">
      <ul class="newburger">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container-fluid">
  <form class="create-form">
    <div class="row d-flex justify-content-around">
      <div class="form-group">
        <div class="row">
          <textarea id="ca" name="name" rows="5" cols="50"></textarea>
        </div>
        <br>
        <div class="row d-flex justify-content-center">
          <button type="submit" class="btn btn-primary" id="submit">Submit</button>
        </div>
        <br>
        <div class="row d-flex justify-content-center">
          <p> Please enter a burger that you would like to try.</p>
        </div>
      </div>
    </div>
  </form>
</div>